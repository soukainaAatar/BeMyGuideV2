<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categories"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/categorieText"
        android:layout_width="395dp"
        android:layout_height="39dp"
        android:ems="10"
        android:gravity="center"
        android:text="@string/categorie"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/carteButton"

            android:layout_width="370dp"
            android:layout_height="150dp"
            android:background="@drawable/carte"
            android:text="Voire la Carte"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/villeButton"
            android:layout_width="370dp"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/city"
            android:text="Voire les villes"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/placeButton"
            android:layout_width="370dp"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/place"
            android:text="Voire les Places"
            android:textColor="@color/white"
            />
    </LinearLayout>

</LinearLayout>