<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:padding="4dp"
    android:background="@drawable/round_corner"

    android:orientation="vertical" >

    <TextView
        android:id="@+id/ps_userText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text=""
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ps_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="3dp"
             />

        <TextView
            android:id="@+id/ps_description"
            android:layout_width="306dp"
            android:layout_height="100dp"
            android:background="#22ffff00"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ps_VilleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:text=""
            />

        <ImageButton
            android:id="@+id/ps_goVisit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@android:drawable/ic_menu_send" />

        <TextView
            android:id="@+id/ps_visitsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"

            android:text=""
            />

        <Button
            android:id="@+id/ps_visits"
            android:layout_width="30dp"
            android:layout_height="30dp"

           />


        <TextView
            android:id="@+id/ps_likesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text=""
            />

        <Button
            android:id="@+id/ps_likes"
            android:layout_width="30dp"
            android:layout_height="30dp"

           />


    </LinearLayout>


</LinearLayout>