<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:padding="4dp"
    android:background="@drawable/round_corner"

    android:orientation="vertical" >

    <TextView
        android:id="@+id/villeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text=""
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ville_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginRight="3dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/v_visitsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="25dp"
            android:textSize="20sp"

            android:text=""
            />

        <Button
            android:id="@+id/v_visit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:drawable/checkbox_on_background"
          />


        <TextView
            android:id="@+id/v_placesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text=""
            android:textSize="20sp" />

        <Button
            android:id="@+id/v_like"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:background="@drawable/like_on" />

        <TextView
            android:id="@+id/v_likesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:text=""
            android:textSize="20sp" />


    </LinearLayout>


</LinearLayout>