



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Login"
android:gravity="center"
android:orientation="vertical">

<TextView
    android:id="@+id/logingText"
    android:layout_width="395dp"
    android:layout_height="39dp"
    android:ems="10"
    android:gravity="center"
    android:text="@string/loging"
    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="395dp"
        android:layout_height="322dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/glasses" />

    <TextView
        android:id="@+id/error_LI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text=""
        android:textColor="#ff0000" />

    <EditText
        android:id="@+id/emailEditText_LI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/errorEmail_LI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:text=""
        android:textColor="#ff0000"/>


    <EditText
        android:id="@+id/passwordEditText_LI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginButton_LI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="35dp"
        android:text="Login" />


    <TextView
        android:id="@+id/goInscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:text="Pas de compte ? : inscrivez-vous !" />
</LinearLayout>

</LinearLayout>

